# MCP 서버 환경 설정 예시
NODE_ENV=development
PORT=3000

# 문서 저장소 설정
DOCUMENTS_BASE_PATH=./docs
AUTO_DISCOVER_DOMAINS=true

# BM25 알고리즘 파라미터
BM25_K1=1.2
BM25_B=0.75

# 청크 설정
MIN_CHUNK_WORDS=30
CONTEXT_WINDOW_SIZE=2

# 캐시 설정
CACHE_MAX_SIZE=500
CACHE_TTL=3600000

# 로깅 설정
LOG_LEVEL=info
LOG_DIR=./logs

# 성능 설정
MAX_SEARCH_RESULTS=50
INDEX_BATCH_SIZE=100

# 디버그 모드
DEBUG_MODE=false
HOT_RELOAD=true

# 파일 감시 설정
WATCH_DEBOUNCE_MS=1000